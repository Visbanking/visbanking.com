extends layout.pug

block meta
	meta(name="description" content="")
	meta(name="keywords" content="")

block styles 
	link(rel="stylesheet" href="/css/contact.css")

block header

block main
	aside#intro
		h1 Enhance your decision-making with Visbanking solutions
		h2 Subscription plans to meet your needs
	//- p.icons 
	//- 	a(href="https://www.facebook.com/visbanking" target="_blank" rel="noopener noreferrer nofollow" title="Facebook") 
	//- 		i.bi-facebook
	//- 	a(href="https://www.linkedin.com/company/visbanking/" target="_blank" rel="noopener noreferrer nofollow" title="LinkedIn")
	//- 		i.bi-linkedin
	//- 	a(href="https://www.instagram.com/visbanking/" target="_blank" rel="noopener noreferrer nofollow" title="Instagram")
	//- 		i.bi-instagram 
	section.container-fluid#contact
		form(method="POST")
			h2 Talk with us
			aside
				input#name(type="text" name="fname", required, placeholder="First Name *")
				input#email(type="text" name="lname", required, placeholder="Last Name *")
				input#subject(type="email" name="email", required, placeholder="Email*")
				input#phone(type="tel" name="phone" placeholder="Phone")
				label(for="topic") Topic:
				select#topic(name="topic")
					option(value="General") General
					option(value="Sales") Sales
					option(value="Support") Support
				textarea#message(type="text" name="message" rows="2" required placeholder="Message *")
				input(type="submit" value="Send")
		aside.information 
			div.contact
				h3 Contact Information
				a(href="mailto:contact@visbanking.com")
					i.bi-envelope-fill
					br
					| Contact
				a(href="mailto:support@visbanking.com")
					i.bi-envelope-fill
					br
					| Support
				a(href="mailto:sales@visbanking.com") 
					i.bi-envelope-fill
					br
					| Sales
			div.social
				h3 Follow Us
				a(href="https://www.facebook.com/visbanking" target="_blank" rel="noopener noreferrer nofollow" title="Facebook") 
					i.bi-facebook
				a(href="https://www.linkedin.com/company/visbanking/" target="_blank" rel="noopener noreferrer nofollow" title="LinkedIn")
					i.bi-linkedin
				a(href="https://www.instagram.com/visbanking/" target="_blank" rel="noopener noreferrer nofollow" title="Instagram")
					i.bi-instagram 
				a(href="https://twitter.com/visbanking" target="_blank" rel="noopener noreferrer nofollow" title="Twitter")
					i.bi-twitter 
			div.company
				h3 Company
				a(href="/about") About Us
				a(href="/privacy") Privacy Policy
				a(href="/terms") Terms and Conditions

block scripts 
	script(src="/js/contact.js") 