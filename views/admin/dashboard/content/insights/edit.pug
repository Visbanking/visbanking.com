doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		meta(name="author" content="Visbanking.com")
		meta(name="title" content="Add new insight")
		title Add new insight
		link(rel="preconnect" href="https://fonts.googleapis.com")
		link(rel="preconnect" href="https://fonts.gstatic.com", crossorigin)
		link(href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;500;600;700&display=swap" rel="stylesheet")
		link(rel="stylesheet" href="/css/admin/dashboard/content/insights/create.css")
	body 
		h1 Edit insight
		form.active(method="POST" enctype="multipart/form-data")
			label(for="title") Insight to edit *
			select#title(name="title", required) 
				each insightTitle in insightsTitles 
					option(value=insightTitle) #{insightTitle} 
			label(for="headerImage") New Header Image *
			img(src="")
			input#headerImage(type="file" name="headerImage" accept="image/jpeg, image/png", required)
			input(type="submit" value="Edit insight")
		script(src="/js/admin/dashboard/content/insights/edit.js") 