                    option(value="Ken Chase") Ken Chase
                label(for="headerImage") Image *
                img(src='')
                input#headerImage(type="file", name="headerImage", accept="image/jpeg, image/png, image/webp", required)
                label(for="body") Body *
                div#article
                textarea#body(name="body", rows="10", required)
                //- label(for="bodyImages") In-Body images
                //- input#bodyImages(type="file", name="bodyImages", accept="image/jpeg, image/png, image/webp", multiple)
                label(for="topic") Topic *
                select#topic(name="topic", required)
                    option(value="Business") Business
                    option(value="Banks") Banks
                    option(value="Financial") Financial
                    option(value="Market") Market
                    option(value="Politics") Politics
                label(for="tags") Tags *
                input#tags(type="text", name="tags", maxlength="300", required)
                label(for="description") Meta Description *
                textarea#description(name="description", rows="10", required)
                label(for="keywords") Keywords *
                input#keywords(type="text", name="keywords", maxlength="300", required) 
                input(type="submit", name="action", value="Add insight")
            p#error
        script(src="/js/insights/editor.js") 
        script(src="/js/insights/create.js") 