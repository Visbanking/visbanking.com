extends layout.pug

block meta
	meta(name="description" content="")
	meta(name="keywords" content="")

block styles 
	link(rel="stylesheet" href="/css/pricing.css")

block main
	aside#intro
		h1 Enhance your decision-making with Visbanking solutions
		h2 Subscription plans to meet your needs
	section#pricing
		aside.plan#free
			h3 Free
			p
				span.price $#{tiers.free.price}
			hr
			ul.features
				each feature in tiers.free.features
					li 
						p
							i.bi-check2-square 
							| #{feature}
			a.button(href="/signup?tier=free" target="_blank") Subscribe 
		aside.plan#professional
			div Most Popular
			h3 Professional
			p
				span.price $#{tiers.professional.price}
				| /month
			hr
			p All Free Features 
				br
				i.bi-plus
			ul.features
				each feature in tiers.professional.features
					li 
						p
							i.bi-check2-square 
							| #{feature}
			a.button(href="/signup?tier=professional" target="_blank") Subscribe 
		aside.plan#premium 
			h3 Premium
			p
				span.price $#{tiers.premium.price}
				| /month
			hr
			p All Professional Features 
				br
				i.bi-plus    
			ul.features
				each feature in tiers.premium.features
					li 
						p
							i.bi-check2-square 
							| #{feature}
			a.button(href="/signup?tier=premium" target="_blank") Subscribe 
		aside.plan#enterprise 
			h3 Enterprise
			p.price Contact sales
			hr
			p All Premium Features 
				br
				i.bi-plus
			ul.features
				each feature in tiers.enterprise.features
					li 
						p
							i.bi-check2-square 
							| #{feature}
			a.button(href="mailto:sales@visbanking.com") Contact Sales 

block scripts 
	script(src="/js/pricing.js") 

