extends layout.pug

block meta
    meta(name="keywords", content="")
    meta(name="description", content="")

block styles 
    link(rel="stylesheet", href="/css/user.css")

block main 
    section(id=userInfo.username)
        if user===userInfo.Email
            button#logout Log Out
        form(method="POST")
            if userInfo.Image
                img(src=`data:image/png;base64,${userInfo.Image}`, alt=`${userInfo.FirstName} ${userInfo.LastName}`)
            else 
                i.bi-person-fill
            h1(data) #{userInfo.FirstName} #{userInfo.LastName}
                if user===userInfo.Email
                    i.bi-pencil-square#name(title="Update Name")
                    input#name(type="text", name="name", placeholder="Name Surname")
            p#email(title="Your Email") (#{userInfo.Email}) 
            if user===userInfo.Email 
                a#pass Change Password
            input(type="submit", value="Save")


block scripts 
    script(src="/js/user.js") 