extends layout.pug

block meta
    meta(name="description", content="Visbanking is a US-based finance company focused on making banking data more accesible to end users.")
    meta(name="keywords", content="")

block styles 
    link(rel="stylesheet", href="/css/index.css")

block header
    section.container-fluid#intro 
        i.bi-chevron-left(@click="carouselLeft")
        aside.carousel-slide(style="background: url(/images/carousel1.jpg);", v-if="carousel===1")
            .carousel-text
                h2 Article Title #1
                p Article Introduction #1
        aside.carousel-slide(style="background: url(/images/carousel2.jpg);", v-if="carousel===2")
            .carousel-text
                h2 Article Title #2
                p Article Introduction #2
        aside.carousel-slide(style="background: url(/images/carousel3.jpg);", v-if="carousel===3")
            .carousel-text
                h2 Article Title #3
                p Article Introduction #3
        i.bi-chevron-right(@click="carouselRight")

block main 
    section.container-fluid#capabilities 
        h1 Visbanking
        .indicator
            div(@click="show('about')", :class="{ active: tabs[0] }") Who We Are 
                i(:class="{ 'bi-chevron-down': !tabs[0], 'bi-chevron-up': tabs[0] }")
            div(@click="show('services')", :class="{ active: tabs[1] }") Our Services 
                i(:class="{ 'bi-chevron-down': !tabs[1], 'bi-chevron-up': tabs[1] }")
            div(@click="show('insights')", :class="{ active: tabs[2] }") Insights 
                i(:class="{ 'bi-chevron-down': !tabs[2], 'bi-chevron-up': tabs[2] }")
        .tabs 
            aside.tab(v-if="tabs[0]")
                h2 Who We Are tab
                p Some information regarding Visbanking
                a(href="/about") Learn more
            aside.tab(v-if="tabs[1]")
                h2 Our Services tab
                p Some information regarding the services provided by Visbanking
                a(href="/services") Learn more
            aside.tab(v-if="tabs[2]")
                h2 Insights 
                p Some general information about the insights provided by Visbanking
                a(href="/insights") Learn more
        .indicator
            div 
                i.bi-dot(@click="show('about')", :class="{ active: tabs[0] }") 
                i.bi-dot(@click="show('services')", :class="{ active: tabs[1] }")
                i.bi-dot(@click="show('insights')", :class="{ active: tabs[2] }")
    section.container-fluid#newsletter 
        aside 
            h2 Join our Newsletter
            p Paragraph 
            a(href="/subscribe") Subscribe to our newsletter
                i.bi-chevron-right

block scripts 
    script(src="/js/index.js") 